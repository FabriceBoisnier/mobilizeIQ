{
  "name": "ecofleet",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:front": "npm --workspace frontend run dev",
    "dev:back": "npm --workspace backend run dev",
    "lint": "npm-run-all -p lint:*",
    "lint:front": "npm -w frontend run lint",
    "lint:back": "npm -w backend run lint",
    "build": "npm-run-all -p build:*",
    "build:front": "npm -w frontend run build",
    "build:back": "npm -w backend run build",
    "test": "echo \"(tests Ã  venir)\" && exit 0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
